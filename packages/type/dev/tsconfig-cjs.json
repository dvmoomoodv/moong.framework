{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": false,
    "allowJs": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["@types/node", "@types/jest", "nuxt"],
    "baseUrl": "../../../",
    "paths": {
      "#moong/core": ["framework/core/src"],
      "#moong/core/*": ["framework/core/src/*"],
      "#moong/h3": ["framework/h3/src"],
      "#moong/h3/*": ["framework/h3/src/*"],
      "#moong/nuxt": ["framework/nuxt/src"],
      "#moong/nuxt/*": ["framework/nuxt/src/*"],
      "#app": ["node_modules/nuxt/dist/app"],
      "#app/*": ["node_modules/nuxt/dist/app/*"],
      "vue-demi": ["node_modules/nuxt/dist/app/compat/vue-demi"],
      "#head": ["node_modules/nuxt/dist/head/runtime"],
      "#head/*": ["node_modules/nuxt/dist/head/runtime/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true
    }
  },
  "include": ["@moong/core/src/**/*.ts", "@moong/h3/src/**/*.ts"]
}
